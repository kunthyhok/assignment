<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="retrofit.com.contactretrofits">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="retrofit.com.newskh.SplashScreenActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="retrofit.com.newskh.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="retrofit.com.newskh.NewsDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="retrofit.com.newskh.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="retrofit.com.newskh.ArticleByCategoryActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>